    <meta
      property="og:description"
      content="Contenido e informacion personal"
    />
    <meta property="og:image:type" content="image/png" />
    <meta property="og:image:height" content="377" />
    <meta property="og:image:width" content="300" />
    <meta
      property="og:image"
      content="https://res.cloudinary.com/juanvladimir13/image/upload/v1748434072/bth/escudo-2025-sm.png"
    />
