    <meta name="robots" content="index, follow" />
    <meta name="author" content="Juan Vladimir" />
    <meta name="description" content="Contenido e informacion personal" />
    <meta property="og:locale" content="es_BO" />
    <meta property="og:url" content="https://juanvladimir13.web.app/" />
    <meta property="og:type" content="website" />
